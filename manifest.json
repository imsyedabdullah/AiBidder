{
    "name": "AiBidder",
    "description": "An extension to write Bids automatically for Freelancer and Upwork",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "src/js/background.js"
    },
    "content_scripts": [{
        "matches": [ "*://*/*" ],
        "js":  ["src/js/content.js"],
        "all_frames": false
    }],
    "permissions": [ "tabs", "storage", "clipboardWrite"],
	"host_permissions": [ "*://*/*" ],
    "web_accessible_resources": [
        {
            "resources": [ "*.html", "*.css", "*.js"],
            "matches": [ "*://*/*" ]
        }
    ],
    "action": {
        "default_icon": {
          "16": "assets/img/icon-16x16.png",
          "32": "assets/img/icon-32x32.png"
        }
    },
    "icons": {
        "16": "assets/img/icon-16x16.png",
        "32": "assets/img/icon-32x32.png",
        "128": "assets/img/icon-128x128.png"
    }
}