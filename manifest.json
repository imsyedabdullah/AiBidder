{
    "name": "AiBidder",
    "description": "An extension to write Bids automatically for Freelancer and Upwork",
    "version": "1.0.5",
    "manifest_version": 3,
    "background": {
      "service_worker": "src/js/background.js"
    },
    "content_scripts": [{
        "matches": [ "*://*/*" ],
        "js":  ["src/js/content.js"],
		"run_at": "document_end",
        "all_frames": false
    }],
    "permissions": [ "tabs", "storage", "clipboardWrite"],
	"host_permissions": [ "*://*/*" ],
    "web_accessible_resources": [
        {
            "resources": [ "*.html", "*.css", "*.js"],
            "matches": [ "*://*/*" ]
        }
    ],
    "action": {

    }
}